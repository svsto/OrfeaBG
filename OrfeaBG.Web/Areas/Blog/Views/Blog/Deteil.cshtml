@model ArticleServiceModel

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = Model.Title;
}
<section id="page-header">
    <div class="container">
        <div class="row">
            <div class="col-xs-12">
                <h1 class="page-header">@ViewData["Title"]</h1>
            </div>
        </div>
    </div>
</section>
<section class="main-container" role="main">
    <div class="container">
        <div class="row">
            <div class="col-xs-12">
            @if (!string.IsNullOrEmpty(Model.ImageName))
            {
                <div class="img-box img-center">
                    <img src="~/blog/@Model.ImageName" alt="@Model.Title" class="img-responsive" />
                </div>
            }

            <div class="content">
                @Html.Raw(Model.Content)
            </div>
            <div class="well well-small author-info">

                @if (!string.IsNullOrWhiteSpace(Model.LinkFrom))
                {
                    <p>
                        източник: <a href="@Model.LinkFrom" target="_blank">@Model.LinkFrom</a> <br />
                        качил: @Model.Author на @Model.PublishDate.ToShortDateString()
                    </p>
                }
                else
                {
                    <p>автор: @Model.Author на @Model.PublishDate.ToShortDateString()</p>
                }
            </div>
                </div>
            </div>
        </div>
    </section>

