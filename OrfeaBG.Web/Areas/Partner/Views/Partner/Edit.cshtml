@model PartnerListingServiceModel
@{
    ViewData["Title"] = "Add Partner";
}
<h2>@ViewData["Title"]</h2>

<form asp-action="Edit" method="post" enctype="multipart/form-data">
    <input asp-for="Id" type="hidden" />
    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Image"></label>
        @if(!string.IsNullOrEmpty(Model.LogoName))
        {
            <img src="/partners/@Model.LogoName" width="65" class="img-responsive">
        }
        <input asp-for="Image" class="form-control" />
        <span asp-validation-for="Image" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Link"></label>
        <input asp-for="Link" class="form-control" />
        <span asp-validation-for="Link" class="text-danger"></span>
    </div>
    <input class="btn btn-sm btn-primary" type="submit" value="Save" />
</form>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}